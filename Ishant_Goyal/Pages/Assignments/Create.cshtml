@page
@model Ishant_Goyal.Pages.Assignments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CourseAssignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseAssignment.Course.CourseName" class="control-label"></label>
                <select asp-for="CourseAssignment.CourseId" class ="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseAssignment.Instructor.InstructorName" class="control-label"></label>
                <select asp-for="CourseAssignment.InstructorId" class ="form-control" asp-items="ViewBag.InstructorId"></select>
            </div>
            <div class="text-danger"><b>@Model.Msg</b></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
